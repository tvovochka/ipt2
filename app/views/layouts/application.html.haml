!!! html
%html{ html_attrs('ru')}
  %head
    %title #{title}
    = csrf_meta_tag
    = render 'layouts/stylesheets'
  %body
    #page
      = render 'layouts/header'
      %section
        #left
          = render 'layouts/nav'
        #center
          - flash.each do |key, value|
            -# %div{ :class => "flash #{key}" } #{value}
            = content_tag(:div, value, :class => "flash #{key}")
          = yield
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?