%p
  Вход для 
  %br
  %span 
    пользователей

= link_to user_icon, signup_path

= form_for(:session, :url => sessions_path) do |f|
  .field
    = f.email_field :email, { :placeholder => "user@example.ru", :required => true }
  .field
    = f.password_field :password, { :required => true, :placeholder => "***********" }
  .actions
    = f.submit "ВХОД"