%tr
  %td
    %span.content
      = micropost.content
    %span.timestamp
      Написал
      = time_ago_in_words(micropost.created_at)
      назад.
  - if current_user?(micropost.user)
    %td
      = link_to "delete", micropost, :method => :delete, :confirm => "Вы уверены?", :title => micropost.content