%tr
  %td.gravatar
    = link_to gravatar_for(feed_item.user), feed_item.user
  %td.micropost
    %span.user
      = link_to feed_item.user.name, feed_item.user
    %span.content
      = feed_item.content
    %span.timestamp
      Написано
      = time_ago_in_words(feed_item.created_at)
      назад.
  - if current_user?(feed_item.user)
    %td
      = link_to "delete", feed_item,  :method => :delete, :confirm => "Вы уверены?", :title => feed_item.content