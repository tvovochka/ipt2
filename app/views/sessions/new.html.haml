%h2 Вход пользователя

= form_for(:session, :url => sessions_path) do |f|
  .field
    = f.label :email
    %br
    = f.email_field :email, { :placeholder => "user@example.ru" , :autofocus => true, :required => true, :id => 'page_email' }
  .field
    = f.label :password, "Пароль"
    %br
    = f.password_field :password, { :required => true, :id => 'page_password' }
  .actions
    = f.submit "Войти", :id => 'page_submit'

%p 
  Новый пользователь?
  = link_to "Зарегистрироваться", signup_path
